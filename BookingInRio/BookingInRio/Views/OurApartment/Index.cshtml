@model List<AboutApartment>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/assets/media/favicon.png">
    <title>Home</title>
    <!-- CSS only -->
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
          integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">

    <link rel="stylesheet" href="assets/css/style.min.css">
</head>

<body style="background-image: url(./assets/media/bg-apartment.png);">
    <main>
        <section id="page-title">
            <h1>
                Our Apartment
            </h1>
        </section>
        <section id="rooms">
            <div class="container">
                <div class="row">
                    <div class="col-10">
                        <h1>Our Rooms</h1>
                        <form action="#">
                            <input type="date" class="date">
                            <input type="date" class="date">
                            <input type="number" class="count">
                            <input type="number" class="count">
                            <button type="submit">Search</button>
                        </form>

                        @foreach (AboutApartment apart in Model.OrderBy(u=>u.BedCounts))
                        {
                            <div class="item">
                                <div class="image">
                                    <img src="assets/media/apartment-1.jpg" alt="">
                                </div>
                                <div class="description">
                                    <div class="info">
                                        <h2>
                                            <a href="#">@apart.Name</a>
                                        </h2>
                                        <span>
                                            @apart.Description
                                        </span>
                                        <ul class="parametres">
                                            <li>Size: <span>@apart.SizeOfRoomInSqrMeter</span> </li>
                                            <li>Beds: <span>@apart.BedCounts</span> </li>
                                        </ul>
                                        <ul class="features">
                                            <li title="WiFi">
                                                <i class="fas fa-wifi"></i>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="price">
                                        <span>From</span>
                                        <p>$@apart.PriceOfRoom</p>
                                        <a asp-controller="OurApartment" asp-action="Apartment" asp-route-id="@apart.Id">
                                            More Info
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </section>
    </main>
    <script src="https://kit.fontawesome.com/fad17f25d7.js" crossorigin="anonymous"></script>

    <script src="assets/JS/main.js"></script>
</body>

</html>