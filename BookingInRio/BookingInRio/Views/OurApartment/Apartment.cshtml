@model AboutApartment 
<body style="background-image: url(/assets/media/bg-apartment.png);">
    <main>
        <section id="page-title">
            <h1>
                Our Apartment
            </h1>
        </section>
        <section id="room">
            <div class="container">
                <div class="row">
                    <div class="col-10">
                        <div class="title">
                            <a asp-controller="OurApartment" asp-action="Index">
                                <i class="fas fa-arrow-left"></i>
                            </a>
                            <h1>@Model.Name</h1>
                        </div>

                        <div class="row">
                            <div class="col-8 col-lg-8 col-sm-12 col-xs-12">
                                
                                <div class="slider">
                                    <ul id="imageGallery">

                                        @foreach (ApartmentImage image in Model.Images)
                                        {
                                            <li data-thumb="@image.Path" data-src="@image.Path">
                                                <img src="@image.Path" />
                                            </li>
                                        }

                                    </ul>
                                </div>

                                <div class="info">
                                    <div class="item">
                                        <div class="row">
                                            <div class="col-4">
                                                <h4>Properties:</h4>
                                            </div>
                                            <div class="col-8">
                                                <ul>
                                                    <li> Accomodates: <span>@Model.DetailedInformationApartment.PersonLimitSize</span></li>
                                                    <li> Size: <span>@Model.SizeOfRoomInSqrMeter</span></li>
                                                    <li> Beds: <span>@Model.BedCounts</span></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="item">
                                        <div class="row">
                                            <div class="col-4">
                                                <h4>More Info:</h4>
                                            </div>
                                            <div class="col-8">
                                                <p>
                                                    @Model.DetailedInformationApartment.DetailedDescription
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="item">
                                        <div class="row">
                                            <div class="col-4">
                                                <h4>Amenities:</h4>
                                            </div>
                                            <div class="col-8">
                                                <ul>
                                                    @foreach (AmenitiesToDetailedApartments amenity in Model.DetailedInformationApartment.AmenitiesToDetailedApartments)
                                                    {
                                                        <li>
                                                            <img src="@amenity.Amenity.ImagePath" style="width: 40px; height: 40px;" />
                                                            <span>@amenity.Amenity.Name</span>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>  
                            <div class="col-4">
                                <div class="book">
                                    <span>From</span>
                                    <p>$@Model.PriceOfRoom</p>
                                    <span>Per Night</span>
                                    <form action="/OurApartment/CheckOut" method="post">
                                        <input type="hidden" name="ApartmentId" value="@Model.Id">
                                        <input type="date" name="StartingDate">
                                        <input type="date" name="EndingTime">
                                        <input type="number" name="PersonCount" placeholder="Person Count">
                                        <input type="number" name="BedCount" placeholder="Bed Count">
                                        <button type="submit">Book Now</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>
